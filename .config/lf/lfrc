set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/clean

# Basic Settings
set hidden true
set ignorecase true
set icons true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}
cmd rm ${{
    rm -fr $f
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd nvim ${{
    $EDITOR "$f"
}}

# Bindings
map d
map m

map c nvim "$f"

map au unarchive

# Basic Functions
map . set hidden!
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map C clear
map ddd ${{
    rm -rf "$fx"    
}}

# Movement
map gc cd ~/.config
map gs cd ~/.local/bin
