#!/bin/sh

source $HOME/.config/zsh/aliases

op=$( echo -e " Poweroff\n Reboot\n Suspend\n Lock\n Logout" | wmenu | awk '{print tolower($2)}' )

case $op in 
        poweroff)
                ;&
        reboot)
                ;&
        suspend)
                systemctl $op
                ;;
        lock)
		        swaylock
                ;;
        logout)
                hyprctl dispatch exit 0
                ;;
esac
