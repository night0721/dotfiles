#!/bin/sh

. $HOME/.config/yash/aliases

op=$(echo " Poweroff\n Reboot\n Suspend\n Lock\n Logout" | wmenu | awk '{print tolower($2)}')

case $op in 
        poweroff)
                exit
                ;;
        reboot)
                exit
                ;;
        suspend)
                systemctl $op
                ;;
        lock)
		        swaylock
                ;;
        logout)
                hyprctl dispatch exit 0
                ;;
esac
