#!/bin/sh

# Initialize total count
total_lines=0

# List of files to ignore
ignore_files=(
    "*/.git/*"
    "*.log"
    "*/LICENSE"
    "*.gitattributes"
    "*.vcxproj*"
    "*.sln"
    "*.gitignore"
    "*.md"
    "*.o"
    "*.tar.gz"
    "*/Makefile"
    "*.1"
    "*.xml"
    "*.iml"
    "*.yml"
    "*.jar"
    "*.jpg"
    "*.png"
    "*.json"
    "*.zip"
    "*/gradlew"
    "*.xcf"
    "*.sxcu"
    "*.rc"
    "*.txt"
    "*/Java/Utilities/*"
    "*/cath-docs/*"
    "*.ttf"
    "*.woff2"
    "*.exe"
    "*/SkySkipped/*"
    "*/master-ghosterbuster-9000/*"
    "*/lib/json/*"
    "*/node_modules/*"
    "*/package.json"
    "*/package-lock.json"
    "*/Windows/*"
)

for file in $(find . -type f); do
 # check if file is directory
 if [[ -d $file ]]; then
   continue
 fi

 # Check if the file is executable
 if [[ -x $file ]]; then
   continue
 fi

 for ignore in "${ignore_files[@]}"; do
   if [[ $file == $ignore ]]; then
     continue 2
   fi
 done
 lines=$(wc -l < "$file")
 total_lines=$((total_lines + lines))
done

echo "Total lines: $total_lines"

