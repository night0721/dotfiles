#!/bin/sh

#set the xfce and GTK theme
gsettings set org.gnome.desktop.interface icon-theme "Catppuccin-SE"
gsettings set org.gnome.desktop.interface gtk-theme "Catppuccin-Mocha-Standard-Lavender-Dark"

# change background
swww img ~/.nky/Photo/Banner/night_banner_yt.png --transition-fps 60 --transition-type wipe --transition-duration 1
 
#reset mako
sleep 1
pkill mako
mako &

#restart the waybar
pkill waybar
waybar &
