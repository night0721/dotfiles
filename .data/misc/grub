# GRUB boot loader configuration

GRUB_DEFAULT="0"
GRUB_DISTRIBUTOR="Arch"
GRUB_CMDLINE_LINUX_DEFAULT="loglevel=3 quiet splash udev.log_priority=3 vt.global_cursor_default=1 amdgpu.backlight=0 amd_iommu=on kvm.ignore_msrs=1 iommu=pt vfio_iommu_type1.allow_unsafe_interrupts=1 blacklist=noveau iommu=pt"
GRUB_CMDLINE_LINUX=""
GRUB_PRELOAD_MODULES="part_gpt part_msdos"
GRUB_TERMINAL_INPUT="console"
GRUB_GFXPAYLOAD_LINUX="keep"
GRUB_DISABLE_RECOVERY="true"
GRUB_DISABLE_OS_PROBER="false"
